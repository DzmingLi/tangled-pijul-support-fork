{
  "lexicon": 1,
  "id": "sh.tangled.repo.channelList",
  "defs": {
    "main": {
      "type": "query",
      "description": "List channels in a Pijul repository",
      "parameters": {
        "type": "params",
        "required": ["repo"],
        "properties": {
          "repo": {
            "type": "string",
            "description": "Repository identifier in format 'did:plc:.../repoName'"
          },
          "limit": {
            "type": "integer",
            "description": "Maximum number of channels to return",
            "minimum": 1,
            "maximum": 100,
            "default": 50
          },
          "cursor": {
            "type": "string",
            "description": "Pagination cursor (offset)"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["channels"],
          "properties": {
            "channels": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "#channel"
              }
            }
          }
        }
      },
      "errors": [
        {
          "name": "RepoNotFound",
          "description": "Repository not found or access denied"
        },
        {
          "name": "InvalidRequest",
          "description": "Invalid request parameters"
        }
      ]
    },
    "channel": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Channel name"
        },
        "is_current": {
          "type": "boolean",
          "description": "Whether this is the currently active channel"
        }
      }
    }
  }
}
